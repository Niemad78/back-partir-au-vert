generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  nom       String?
  prenom    String?
  role      Role      @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}

model Activite {
  id               String            @id @default(cuid())
  nom              String
  description      String            @db.LongText
  prix             Float
  ville            String
  departement      Int
  nbPersonnesMax   Int
  duree            Duree?
  latitude         Decimal?          @db.Decimal(9, 6)
  longitude        Decimal?          @db.Decimal(9, 6)
  adresse          String?
  accessibilite    String?           @db.LongText
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  pointFort        PointFort[]
  images           Image[]
  themeOnActivites ThemeOnActivite[]
}

enum Duree {
  journee
  matinee
  apres_midi
}

model Theme {
  id               String            @id @default(cuid())
  nom              String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  image            Image?
  themeOnActivites ThemeOnActivite[]
}

model ThemeOnActivite {
  activiteId String
  activite   Activite @relation(fields: [activiteId], references: [id], onDelete: Cascade)
  themeId    String
  theme      Theme    @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@id([activiteId, themeId])
}

model PointFort {
  id         String    @id @default(cuid())
  nom        String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  activiteId String?
  activite   Activite? @relation(fields: [activiteId], references: [id])
}

model Image {
  id            String       @id @default(cuid())
  nom           String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  activiteId    String?
  activite      Activite?    @relation(fields: [activiteId], references: [id])
  themeId       String?      @unique
  theme         Theme?       @relation(fields: [themeId], references: [id])
  publicationId String?
  publication   Publication? @relation(fields: [publicationId], references: [id])
  partenaireId  String?      @unique
  partenaire    Partenaire?  @relation(fields: [partenaireId], references: [id])
  equipeId      String?      @unique
  equipe        Equipe?      @relation(fields: [equipeId], references: [id])
  articleId     String?
  article       Article?     @relation(fields: [articleId], references: [id])
}

model Faq {
  id        String   @id @default(cuid())
  question  String
  reponse   String   @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Publication {
  id        String          @id @default(cuid())
  titre     String
  contenu   String          @db.LongText
  type      TypePublication @default(autre)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  images    Image[]
}

enum TypePublication {
  histoire
  seminaire
  mentions_legales
  autre
}

model Partenaire {
  id        String   @id @default(cuid())
  nom       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     Image?
}

model Equipe {
  id          String @id @default(cuid())
  nom         String
  description String @db.LongText
  image       Image?
}

model Article {
  id        String   @id @default(cuid())
  titre     String
  contenu   String   @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  images    Image[]
}
